# Decision Aid Environment Configuration Template
# Copy this file to .env.local for development or configure in production environment

# === CORE CONFIGURATION ===
# Application mode (development, production, staging)
NODE_ENV=development

# Vite development server configuration
VITE_PORT=5173
VITE_HOST=localhost

# === OPENAI CONFIGURATION ===
# Required: OpenAI API key for AI-powered analysis
OPENAI_API_KEY=your-openai-api-key-here

# Required for Assistant API: OpenAI Assistant ID
ASSISTANT_ID=your-assistant-id-here

# Optional: OpenAI Project ID for organization tracking
OPENAI_PROJECT_ID=your-project-id-here

# === SUPABASE CONFIGURATION ===
# Required: Supabase project URL for functions
SUPABASE_URL=your-supabase-url-here

# Required: Supabase anonymous key for client authentication
SUPABASE_ANON_KEY=your-supabase-anon-key-here

# === VITE-SPECIFIC VARIABLES ===
# These are exposed to the frontend (prefixed with VITE_)
VITE_SUPABASE_URL=$SUPABASE_URL
VITE_SUPABASE_ANON_KEY=$SUPABASE_ANON_KEY
VITE_OPENAI_API_KEY=$OPENAI_API_KEY
VITE_ASSISTANT_ID=$ASSISTANT_ID
VITE_OPENAI_PROJECT_ID=$OPENAI_PROJECT_ID

# === LOCAL DEVELOPMENT ===
# Optional: Local Supabase functions URL for development
VITE_LOCAL_FUNCTIONS_URL=http://localhost:54321

# Decision Aid specific routing
VITE_DECISION_AID_URL=http://localhost:8082

# === DOCKER CONFIGURATION ===
# These variables are used in Docker compose environments
DECISION_AID_SUPABASE_URL=$SUPABASE_URL
DECISION_AID_SUPABASE_ANON_KEY=$SUPABASE_ANON_KEY
DECISION_AID_ASSISTANT_ID=$ASSISTANT_ID
DECISION_AID_OPENAI_PROJECT_ID=$OPENAI_PROJECT_ID

# === ANALYSIS CONFIGURATION ===
# Default maximum insights per analysis
VITE_DEFAULT_MAX_INSIGHTS=24

# Analysis timeout in milliseconds
VITE_ANALYSIS_TIMEOUT=30000

# Enable function router debugging
VITE_DEBUG_ROUTER=false

# === FEATURE FLAGS ===
# Enable experimental features
VITE_ENABLE_EXPERIMENTAL_FEATURES=false

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Enable detailed logging
VITE_ENABLE_DEBUG_LOGGING=false

# Enable hover tooltips (default: false for production)
VITE_ENABLE_HOVER_TOOLTIPS=false

# === SECURITY CONFIGURATION ===
# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080,http://localhost:8082

# Content Security Policy settings
CSP_SCRIPT_SRC="'self' 'unsafe-inline' 'unsafe-eval'"
CSP_STYLE_SRC="'self' 'unsafe-inline'"

# === PERFORMANCE SETTINGS ===
# Bundle size warning limit in KB
VITE_CHUNK_SIZE_WARNING_LIMIT=1000

# Enable code splitting for large bundles
VITE_ENABLE_CODE_SPLITTING=true

# === MONITORING & ANALYTICS ===
# Optional: Application insights or monitoring endpoints
MONITORING_ENDPOINT=

# Performance metrics collection
ENABLE_METRICS_COLLECTION=true

# === INTEGRATION SETTINGS ===
# CECI AI integration endpoints
VITE_CECI_API_URL=http://localhost:9000
VITE_CECI_UI_URL=http://localhost:8080

# Decision Aid specific ports
DECISION_AID_PORT=8082
DECISION_AID_FUNCTIONS_PORT=54321

# === DEPLOYMENT CONFIGURATION ===
# Base URL for subpath deployment (e.g., /decision-aid)
VITE_BASE_URL=/decision-aid

# Asset optimization settings
VITE_OPTIMIZE_DEPS=true
VITE_BUILD_SOURCEMAP=false

# === ADVANCED CONFIGURATION ===
# Router configuration for A2A integration
ENABLE_A2A_INTEGRATION=false
A2A_NETWORK_ENDPOINT=

# Custom function router settings
ROUTER_RETRY_ATTEMPTS=3
ROUTER_TIMEOUT_MS=15000
ROUTER_BACKOFF_FACTOR=2

# Memory and cache settings
ENABLE_RESPONSE_CACHING=true
CACHE_TTL_SECONDS=300

# === DEBUGGING & DEVELOPMENT ===
# Enable verbose logging for troubleshooting
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Development tools
ENABLE_REACT_DEVTOOLS=true
ENABLE_REDUX_DEVTOOLS=false

# Hot module replacement settings
VITE_HMR_PORT=5174